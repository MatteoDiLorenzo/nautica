    firstBox.style.transition = "opacity 0.4s ease-in-out, width 0.4s ease-in-out, margin 0.4s ease-in-out";
    firstBox.style.opacity = "0";
    firstBox.style.width = "0px";
    firstBox.style.margin = "0px";

    setTimeout(() => {
        firstBox.style.display = "none"; // Nasconde il primo box
        firstBox.style.width = "70%"; // Ripristina la dimensione originale
        firstBox.style.margin = "25px";
        firstBox.style.opacity = "0.5"; // Torna visibile ma semi-trasparente
        firstBox.style.transition = "none"; // Rimuove la transizione per evitare glitch

        document.querySelector(".content_rev").appendChild(firstBox);
        firstBox.style.display = "block"; // Lo mostra di nuovo

        // Aggiorna la visibilità dei paragrafi
        updateVisibility();
    }, 400); // Deve essere uguale alla durata della transizione
});

function updateVisibility() {
    let reviews = document.querySelectorAll(".box_rev");

    reviews.forEach((box, index) => {
        let paragraph = box.querySelector("p");

        if (paragraph) {
            if (index === 0 || index === 1 || index === 2) {
                paragraph.style.display = "block"; // Il primo e il secondo box hanno il testo visibile
            } else {
                paragraph.style.display = "none"; // Il resto è nascosto
            }
        }

        // Gestione opacità
        if (index === 0) {
            box.style.opacity = "1";
        } else if (index === 1) {
            box.style.opacity = "0.5";
        } else {
            box.style.opacity = "0.5";
        }
    });
}



